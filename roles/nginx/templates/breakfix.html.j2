


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Hello, Nginx!</title>
</head>
<body>
    {% for header in headers_list %}
     {% if header.group is in allowed_list %}
        <h1>{{ header.header }}</h1>


        {% for content in contents | selectattr(header_id, 'equalto', header.id) | map(attribute='body')  %}
        <p>{{ content }}</p>

        {% endfor %}

     {% endif %}
    {% endfor %}

    <p>We have just configured our Nginx web server!</p>
</body>
</html>
